html, body
  width 100%
  height 100%
  padding 0
  margin 0
  font-family sans-serif

body
  background black
  color white

#root
  width 100%
  height 100%

#root
  display flex
  flex-direction row
  align-items center
  justify-content center

canvas
  flex 1
  cursor grab

.column
  flex-shrink 0
  width 200px
  max-height 100%
  overflow auto
  background coral

  &-inner
    display flex
    flex-direction column
    align-items center

.thumbnail
  box-sizing border-box
  width 160px
  height 100px
  border-radius 4px
  margin 8px
  background-size cover
  cursor pointer

  &:hover
    border 2px solid peachpuff

  &.selected
    border 3px solid firebrick

.stats
  top inherit !important
  left inherit !important
  right 0 !important
  bottom 0 !important

.hidden
  display none

.error
  min-width 400px
  padding 40px
  background #440000
